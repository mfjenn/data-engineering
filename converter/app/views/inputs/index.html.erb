<h1>Listing inputs</h1>

<table>
  <tr>
    <th>Purchaser Name</th>
    <th>Item Description</th>
    <th>Item Price</th>
    <th>Purchase Count</th>
    <th>Merchant Address</th>
    <th>Merchant Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @inputs.each do |input| %>
  <tr>
    <td><%= input.purchaser_name %></td>
    <td><%= input.item_description %></td>
    <td><%= input.item_price %></td>
    <td><%= input.purchase_count %></td>
    <td><%= input.merchant_address %></td>
    <td><%= input.merchant_name %></td>
    <td><%= link_to 'Show', input %></td>
    <td><%= link_to 'Edit', edit_input_path(input) %></td>
    <td><%= link_to 'Destroy', input, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

